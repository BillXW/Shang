FIND_PATH(LLVM_BIN_DIR sync)

IF(LLVM_BIN_DIR)
	SET(LLVM_FOUND TRUE)
ENDIF(LLVM_BIN_DIR)

IF (LLVM_FOUND)
  set(SYNC ${LLVM_BIN_DIR}/sync)
  set(LLC ${LLVM_BIN_DIR}/llc)
  set(LLI ${LLVM_BIN_DIR}/lli)
  set(LLVM_AS ${LLVM_BIN_DIR}/llvm-as)
  set(LLVM_LD ${LLVM_BIN_DIR}/llvm-ld)
  IF (NOT LLVM_FIND_QUIETLY)
    MESSAGE(STATUS "Found LLVM: ${LLVM_BIN_DIR}")
  ENDIF (NOT LLVM_FIND_QUIETLY)
ELSE (LLVM_FOUND)
  IF (LLVM_FIND_REQUIRED)
    MESSAGE(FATAL_ERROR "Could not find SYNC")
  ENDIF (LLVM_FIND_REQUIRED)
ENDIF (LLVM_FOUND)
