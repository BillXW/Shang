FIND_PATH(LLVMGCC_BIN_DIR llvm-gcc)

IF(LLVMGCC_BIN_DIR)
	SET(LLVMGCC_FOUND TRUE)
ENDIF(LLVMGCC_BIN_DIR)

IF (LLVMGCC_FOUND)
  set(LLVMGCC ${LLVMGCC_BIN_DIR}/llvm-gcc)
  IF (NOT LLVMGCC_FIND_QUIETLY)
    MESSAGE(STATUS "Found LLVMGCC: ${LLVMGCC_BIN_DIR}")
  ENDIF (NOT LLVMGCC_FIND_QUIETLY)
ELSE (LLVMGCC_FOUND)
  IF (LLVMGCC_FIND_REQUIRED)
    MESSAGE(FATAL_ERROR "Could not find LLC")
  ENDIF (LLVMGCC_FIND_REQUIRED)
ENDIF (LLVMGCC_FOUND)
